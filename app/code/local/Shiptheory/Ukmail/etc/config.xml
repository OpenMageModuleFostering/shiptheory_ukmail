<?xml version="1.0"?>
<config>
	<modules>
		<Shiptheory_Ukmail>
			<version>0.0.1</version>
		</Shiptheory_Ukmail>
	</modules>
	<global>
		<models>
			<ukmail>
				<class>Shiptheory_Ukmail_Model</class>
			</ukmail>
		</models>
		<helpers>
			<ukmail>
				<class>Shiptheory_Ukmail_Helper</class>
			</ukmail>
		</helpers>
		<blocks>
			<ukmail>
				<class>Shiptheory_Ukmail_Block</class>
			</ukmail>
		</blocks>
	</global>
	<admin>
		<routers>
			<ukmail>
				<use>admin</use>
				<args>
					<module>Shiptheory_Ukmail</module>
					<frontName>ukmail</frontName>
				</args>
			</ukmail>
		</routers>
	</admin>
	<adminhtml>
		<layout>
			<updates>
				<shiptheory>
					<file>shiptheory.xml</file>
				</shiptheory>
			</updates>
		</layout>
		<acl>
			<resources>
				<admin>
					<children>
						<system>
							<children>
								<config>
									<children>
										<ukmail translate="title" module="ukmail">
											<title>UK Mail Setup</title>
											<sort_order>20</sort_order>
										</ukmail>
									</children>
								</config>
							</children>
						</system>
					</children>
				</admin>
			</resources>
		</acl>
	</adminhtml>
</config>
